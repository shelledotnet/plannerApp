@page "/plans/form"
@page "/plans/form/{id}"

<PageTitle>@(Id==null ? "Create" : "Edit") | PlannerApp</PageTitle>

<AuthorizeView>
    <Authorized>
        <PAPage Title="Create/Edit a plan" BreadcrumbItems="_breadcrumbItems">
         <MudGrid>
       -   <MudItem lg="6" md="8" sm="12">
            <Planform Id="@Id" />
          </MudItem>
        </MudGrid>

      </PAPage>
    </Authorized>
    <NotAuthorized>
        <MudText Typo="Typo.caption">Welcome extem user , please login to view the page</MudText>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-2" />
        <MudLink Href="/auth/login">Login</MudLink>
    </NotAuthorized>

</AuthorizeView>
