@namespace PlannerApp.BlazorWebAssembly.Components

<EditForm Model="_model" OnValidSubmit="LoginUserAsync">
    <DataAnnotationsValidator />
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Welcome to Planner App v2.0</MudText>
            </CardHeaderContent>
           
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" HelperText="Required" @bind-Value="@_model.Email"></MudTextField>
            <MudTextField Label="Password" HelperText="Required" InputType="InputType.Password" @bind-Value="@_model.Password"></MudTextField>
            <ValidationSummary />

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="my-2" Variant="Variant.Filled">@_errorMessage</MudAlert>
            }


        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit"  StartIcon="@Icons.Material.Filled.Login" IconColor="Color.Tertiary"  Variant="Variant.Filled" Disabled="_isBusy" Color="Color.Primary">Login</MudButton>
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Create" IconColor="Color.Default" Color="Color.Secondary" Disabled="_isBusy" Class="ml-1">Create Account</MudButton>
        </MudCardActions>
    </MudCard>

</EditForm>